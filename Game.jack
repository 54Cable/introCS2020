class Game
{
    field Player player;
    static int key_lag;
    constructor Game new(int stage_num)
    {
        do Stage.init(stage_num);
        do Targets.init();
        do Blocks.init();
        do Map.init();
        let player=Player.new(Stage._player_x(),Stage._player_y());
        let key_lag=100;
        return this;    
    }
    method Player _player()
    {
        return player;
    }
    method void clear_scrn()
    {
        do player.clear_scrn();
        do Blocks.clear_scrn();
        return;
    }
    method void draw()
    {
        do Blocks.draw();
        do player.draw();
        do Targets.draw();
        
        return;
    }
    method void play()
    {
        var char inp;
        do Map.draw();
        while(true)
        {
            let inp=Keyboard.keyPressed();
            //L,U,R,D = 130~133
            if(inp=130)
            {
                do clear_scrn();
                do player.move(0,-1);
                do draw();
                if(Targets.remain()=0)
                {
                    do Screen.clearScreen();
                    do Output.printString("you win");
                }
                do Sys.wait(key_lag);
            }
            if(inp=131)
            {
                do clear_scrn();
                do player.move(-1,0);
                do draw();
                if(Targets.remain()=0)
                {
                    do Screen.clearScreen();
                    do Output.printString("you win");
                }
                do Sys.wait(key_lag);
            }
            if(inp=132)
            {
                do clear_scrn();
                do player.move(0,1);
                do draw(); 
                if(Targets.remain()=0)
                {
                    do Screen.clearScreen();
                    do Output.printString("you win");
                }
                do Sys.wait(key_lag);
            }
            if(inp=133)
            {
                do clear_scrn();
                do player.move(1,0);
                do draw();
                if(Targets.remain()=0)
                {
                    do Screen.clearScreen();
                    do Output.printString("you win");
                }
                do Sys.wait(key_lag);   
            }
        }
        return ;
    }
}